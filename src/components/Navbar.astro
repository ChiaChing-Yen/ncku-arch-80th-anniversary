---
// Define your navigation links here
const navLinks = [
  { href: '/80anniv/#events', label: '系列活動' },
  { href: '/80anniv/#highlights', label: '十年亮點' },
];

import Container from "./Container.astro"
---

<header class="mt-20">
<nav class="w-full top-0 left-0 z-50 fixed bg-white">
  <Container>
    <div class="flex flex-wrap items-center justify-between mx-auto py-3">
      <a href="/80anniv/" class="flex items-center space-x-3 rtl:space-x-reverse">
          <img src="/80anniv/vi/logo-80-badge.svg" class="h-16" alt="Logo" />
      </a>
      <div class="md:block md:w-auto" id="navbar-default">
        <ul class="font-medium flex p-4 md:p-0 mt-4 md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-white ">
            {navLinks.map(link => (
            <li>
                <a href={link.href} class="block py-2 px-3 text-black rounded md:bg-transparent md:p-0">{link.label}</a>
            </li>
            ))}
        </ul>
      </div>
    </div>
  </Container>
</nav>
</header>
