---
import { getCollection } from 'astro:content';
import BlogList from '../blog/BlogList.astro';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const posts = await getCollection('blog').then((posts) =>
  posts.reverse().slice(0, count ?? 3)
);
---

<section class='mt-8'>
  <div class="p-6 text-left text-gray-900 bg-white rounded-3xl border border-gray-100 shadow-card">
    <div class='flex justify-between items-start'>
      <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
        最近文章
      </h2>
      <!--<div class='hidden md:block'>-->
      <!--  <a href='/blog/'><button class="px-8 py-5 bg-zinc-900 hover:bg-white rounded-2xl text-center text-white hover:text-black border text-xl font-normal leading-7">Go to blog &rarr;</button></a>-->
      <!--</div>-->
      <!--<div class='block md:hidden'>-->
      <!--  <a href='/blog/'><button class="px-8 py-5 bg-zinc-900 hover:bg-white rounded-2xl text-center text-white hover:text-black border text-xl font-normal leading-7">to blog</button></a>-->
      <!--</div>-->
    </div>
    <BlogList posts={posts} />
  </div>
</section>
